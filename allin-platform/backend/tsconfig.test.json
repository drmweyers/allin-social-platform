{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "tests/**/*.ts",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}