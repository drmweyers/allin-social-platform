{
  "name": "@allin/backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "mcp:server": "node dist/services/mcp/mcp.server.js",
    "docker:dev": "docker-compose --profile dev up -d",
    "docker:prod": "docker-compose --profile prod up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:full": "playwright test tests/e2e/full-system.spec.ts --reporter=list",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "seed": "ts-node prisma/seed.ts",
    "seed:demo": "ts-node prisma/demo-seed.ts",
    "seed:reset": "prisma migrate reset --force && ts-node prisma/demo-seed.ts",
    "seed:dev": "ts-node prisma/dev-seed.ts",
    "ingest:kb": "ts-node scripts/ingest-knowledge.ts",
    "check:links": "ts-node scripts/check-broken-links.ts",
    "test:ai": "npm run eval:retrieval && npm run eval:answers",
    "eval:retrieval": "ts-node scripts/evaluate-retrieval.ts",
    "eval:answers": "ts-node scripts/evaluate-answers.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@prisma/client": "^5.22.0",
    "@types/cookie-parser": "^1.4.9",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.21.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "fast-glob": "^3.3.2",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^10.2.1",
    "markdown-it": "^14.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.17",
    "openai": "^4.104.0",
    "pgvector": "^0.1.8",
    "socket.io": "^4.7.4",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.55.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/markdown-it": "^13.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
