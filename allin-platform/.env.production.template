# AllIN Platform - Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Application Environment
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/allin_prod
DB_NAME=allin_prod
DB_USER=allin_user
DB_PASSWORD=your_secure_db_password

# Redis Configuration  
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration (Use strong random strings)
JWT_SECRET=your_very_long_and_secure_jwt_secret_at_least_32_characters
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_secret_at_least_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Services
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=AllIN Platform

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Security Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
VALID_API_KEYS=your_api_key_1,your_api_key_2

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/allin/app.log

# Social Media API Keys
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
AI_RATE_LIMIT_MAX=10

# Cache Configuration
CACHE_TTL=3600
SESSION_TTL=86400

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/server.crt
SSL_KEY_PATH=/etc/nginx/ssl/server.key

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_SENTRY_DSN=your_frontend_sentry_dsn
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Production Optimizations
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_STATIC_ASSETS=true
ENABLE_HTTP2=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key