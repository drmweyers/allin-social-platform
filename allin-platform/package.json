{
  "name": "allin-platform",
  "version": "1.0.0",
  "description": "AllIN - AI-Powered Social Media Management Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:coverage:open": "npm run test:coverage --workspaces && open-cli coverage/lcov-report/index.html",
    "test:mutation": "stryker run",
    "test:mutation:incremental": "stryker run --incremental",
    "test:security": "playwright test --project=security",
    "test:accessibility": "playwright test --project=accessibility",
    "test:performance": "playwright test --project=performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:mutation",
    "test:ci": "npm run test:coverage && npm run test:e2e && npm run test:mutation",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "prepare": "husky install",
    "pre-commit": "npm run lint && npm run type-check && npm run test:unit",
    "coverage:merge": "nyc merge coverage/backend coverage/frontend coverage/merged",
    "coverage:report": "nyc report --reporter=html --reporter=text --temp-dir=coverage/merged",
    "reports:generate": "npm run test:coverage && npm run test:mutation && npm run test:e2e",
    "reports:open": "concurrently \"open-cli coverage/lcov-report/index.html\" \"open-cli reports/mutation/mutation-report.html\" \"open-cli playwright-report/index.html\"",
    "deploy:github": "node scripts/deploy.js deploy",
    "deploy:fast": "node scripts/deploy.js deploy --fast",
    "deploy:release": "npm version patch && node scripts/deploy.js deploy 'feat: release version bump'",
    "deploy:rollback": "node scripts/deploy.js rollback",
    "deploy:status": "node scripts/deploy.js status",
    "pre-deploy": "npm run lint && npm run type-check && npm run test:unit"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/html-reporter": "^3.1.0",
    "@stryker-mutator/jest-runner": "^9.1.1",
    "@stryker-mutator/typescript-checker": "^9.1.1",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "nyc": "^17.1.0",
    "open-cli": "^8.0.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/allin-platform.git"
  },
  "keywords": [
    "social-media",
    "management",
    "ai",
    "automation",
    "saas"
  ],
  "author": "AllIN Team",
  "license": "PROPRIETARY",
  "bulletproof-testing": {
    "coverage": {
      "lines": 100,
      "branches": 100,
      "functions": 100,
      "statements": 100
    },
    "mutation": {
      "threshold": 90,
      "high": 90,
      "low": 85,
      "break": 80
    },
    "flake-tolerance": 0,
    "performance-budgets": {
      "lcp": 2500,
      "fcp": 1800,
      "cls": 0.1
    }
  }
}